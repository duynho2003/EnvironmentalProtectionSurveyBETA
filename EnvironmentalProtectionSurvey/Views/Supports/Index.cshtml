@model IEnumerable<EnvironmentalProtectionSurvey.Models.Support>

@{
    ViewData["Title"] = "Supports";
    Layout = "~/Views/Shared/_LayoutBE.cshtml";
}

<nav class="navbar default-layout">
    <div class="navbar-menu-wrapper d-flex align-items-top">
        <h1>Supports</h1>
    </div>
</nav>
<div class="table-responsive mt-1">
    <table class="table select-table" id="Exampledatatable">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TextMessage)
                </th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TextMessage)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning edit-support"><span class="btn-label"><i class="fa fa-edit"></i>Edit</span></a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger delete-support"><span class="btn-label"><i class="fa fa-trash"></i>Delete</span></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
@section scripts{
    <script>
        $(document).ready(function () {
            $("#Exampledatatable").DataTable();
        })
    </script>
}